{
  "Consumer": {
    "Effect": "Allow",
    "Action": [
      "kinesis:Get*",
      "kinesis:DescribeStreamSummary"
    ],
    "Resource": [
      "${ARN}"
    ]
  },
  "Producer": {
    "Effect": "Allow",
    "Action": [
      "kinesis:PutRecord"
    ],
    "Resource": [
      "${ARN}"
    ]
  },
  "PowerUser": {
    "Effect": "Allow",
    "NotAction": [
      "kinesis:CreateStream",
      "kinesis:DeleteStream"
    ],
    "Resource": [
      "${ARN}"
    ]
  }
}
