{
  "Consumer": {
    "Effect": "Allow",
    "Action": [
      "kinesis:DescribeStream",
      "kinesis:GetRecords",
      "kinesis:ListShards"
    ],
    "Resource": [
      "${ARN}"
    ]
  },
  "Producer": {
    "Effect": "Allow",
    "Action": [
      "kinesis:DescribeStream",
      "kinesis:DescribeStreamSummary",
      "kinesis:DescribeStreamConsumer",
      "kinesis:SubscribeToShard",
      "kinesis:RegisterStreamConsumer",
      "kinesis:PutRecord",
      "kinesis:PutRecords",
      "kinesis:ListShards"
    ],
    "Resource": [
      "${ARN}"
    ]
  },
  "PowerUser": {
    "Effect": "Allow",
    "NotAction": [
      "kinesis:CreateStream",
      "kinesis:DeleteStream"
    ],
    "Resource": [
      "${ARN}"
    ]
  },
  "kinesis_firehose": {
    "kinesisSource": {
      "Effect": "Allow",
      "Action": [
        "kinesis:DescribeStream",
        "kinesis:GetShardIterator",
        "kinesis:GetRecords",
        "kinesis:ListShards"
      ],
      "Resource": [
        "${ARN}"
      ]
    }
  }
}
