{
  "RW": {
    "Action": [
      "dynamodb:BatchGet*",
      "dynamodb:DescribeStream",
      "dynamodb:DescribeTable",
      "dynamodb:Get*",
      "dynamodb:Query",
      "dynamodb:Scan",
      "dynamodb:BatchWrite*",
      "dynamodb:DeleteItem",
      "dynamodb:UpdateItem",
      "dynamodb:PutItem"
    ],
    "Effect": "Allow",
    "Resource": [
      "${ARN}",
      "${ARN}/index/*"
    ]
  },
  "RO": {
    "Action": [
      "dynamodb:DescribeTable",
      "dynamodb:Query",
      "dynamodb:Scan",
      "dynamodb:GetItem"
    ],
    "Effect": "Allow",
    "Resource": [
      "${ARN}",
      "${ARN}/index/*"
    ]
  },
  "PowerUser": {
    "NotAction": [
      "dynamodb:CreateTable",
      "dynamodb:DeleteTable",
      "dynamodb:DeleteBackup"
    ],
    "Resource": [
      "${ARN}",
      "${ARN}/index/*"
    ]
  },
  "KinesisKCL": {
    "Effect": "Allow",
    "Action": [
      "dynamodb:GetItem",
      "dynamodb:PutItem",
      "dynamodb:Scan",
      "dynamodb:UpdateItem",
      "dynamodb:DeleteItem"
    ],
    "Resource": [
      "${ARN}",
      "${ARN}/index/*"
    ]
  }
}
