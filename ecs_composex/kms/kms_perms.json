{
  "SQS": {
    "Action": [
      "kms:GenerateDataKey",
      "kms:Decrypt"
    ],
    "Effect": "Allow",
    "Resource": [
      "${ARN}"
    ]
  },
  "DecryptOnly": {
    "Action": [
      "kms:Decrypt"
    ],
    "Effect": "Allow",
    "Resource": [
      "${ARN}"
    ]
  },
  "EncryptOnly": {
    "Action": [
      "kms:Encrypt",
      "kms:GenerateDataKey*",
      "kms:ReEncrypt*"
    ],
    "Effect": "Allow",
    "Resource": [
      "${ARN}"
    ]
  },
  "EncryptDecrypt": {
    "Action": [
      "kms:Encrypt",
      "kms:Decrypt",
      "kms:ReEncrypt*",
      "kms:GenerateDataKey*",
      "kms:CreateGrant",
      "kms:DescribeKey"
    ],
    "Effect": "Allow",
    "Resource": [
      "${ARN}"
    ]
  },
  "kinesis_firehose": {
    "Direct": {
      "Effect": "Allow",
      "Resource": [
        "${ARN}"
      ],
      "Action": [
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:ReEncrypt*",
        "kms:GenerateDataKey*",
        "kms:DescribeKey"
      ]
    },
    "s3": {
      "Effect": "Allow",
      "Resource": [
        "${ARN}"
      ],
      "Action": [
        "kms:Decrypt",
        "kms:GenerateDataKey"
      ]
    }
  }
}
