{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id",: "services.x-scaling.json",
    "type": "object",
    "title": "services.x-iam specification",
    "description": "The services.x-scaling specification for ComposeX",
    "properties": {
        "Range": {
            "type": "string"
        },
        "TargetScaling": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/TargetScalingDef"
            }
        }
    },
    "definitions": {
        "TargetScalingDef": {
            "type": "object",
            "properties": {
                "CpuTarget": {
                    "type": "integer"
                },
                "MemoryTarget": {
                    "type": "integer"
                },
                "ScaleInCooldown": {
                    "type": "integer"
                },
                "ScaleOutCooldown": {
                    "type": "integer"
                },
                "DisableScaleIn": {
                    "type": "integer"
                }
            }
        }
    }
}
