{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "services.x-iam.json",
    "type": "object",
    "title": "services.x-iam specification",
    "description": "The services.x-iam specification for ComposeX",
    "properties": {
        "PermissionsBoundary": {
            "type": "string"
        },
        "Policies": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/PolicyDef"
            }
        }
    },
    "definitions": {
        "PolicyDef": {
            "type": "object",
            "properties": {
                "PolicyName": {
                    "type": "string"
                },
                "PolicyDocument": {
                    "type": "object",
                    "properties": {
                        "Statement": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        },
                        "Version": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
